{
  "extends": ["@tsconfig/esm/tsconfig", "@tsconfig/strictest/tsconfig"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2022",
    "noUncheckedIndexedAccess": false,
    "baseUrl": ".",
    "paths": {
      "@lib": ["packages/src/lib"]
    },
    "types": ["node", "vitest/importMeta"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
